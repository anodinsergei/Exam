{% extends 'base.html.twig' %}

{% block body %}
<div align="center" style="background-color: #3a87ad">

<h1>Blogs list</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Discription</th>
                <th>Createat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.title }}</td>
                <td>{{ blog.discription|slice(0,500) }}...</td>
                <td>{% if blog.createAt %}{{ blog.createAt|date('Y-m-d ') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blog_show', { 'id': blog.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_edit', { 'id': blog.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_new') }}">Create a new blog</a>
        </li>
    </ul>
</div>

{% endblock %}
